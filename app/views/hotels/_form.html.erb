<%= form_with model: hotel do |f| %>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">

    <div class="field">
      <%=f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "Name",class:'form-control' %>
    </div>
       
    <div class="field">
      <%= f.label :contact_no %><br />
      <%= f.text_field :contact_no, autofocus: true, autocomplete: "Contact_No" ,class:'form-control'%>
    </div>
    <div class="field">
      <%= f.label :address %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "Address", class: 'form-control' %>
    </div>

    <div>
      <fieldset>
        <legend>images:</legend>
        <% if f.object.images.present? %>
          <% f.object.images.each do |image| %>
            <%= image_tag(image, :width => 100) %>
          <% end %>
        <% end %>
        <%= f.file_field :images, :multiple => true %>
        <%# f.file_fields :images do |images_form| %>
            <%#= render "image_fields", f: images_form %> 
        <%# end %>
        <%#= link_to_add_fields "Add image", f, :images %>
      </fieldset>
    </div>

     <div>
     <fieldset>
        <legend>rooms:</legend>
        <%= f.fields_for :rooms do |room_form| %>
            <%= render "room_fields", f: room_form %> 
        <% end %>
        <%= link_to_add_fields "Add Room", f, :rooms %>
    </fieldset>
    </div>

    <br>

    <br>
      <div class="actions">
        <%= f.submit class: 'btn btn-info' %>
      </div>
    <% end %>
    
        



    
